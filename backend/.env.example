# Copy this file to .env and update values as needed
# Environment: development, staging, production

# App Settings
DEBUG=True
ENV=development
APP_NAME=Vilibrity API
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# API Settings
API_V1_STR=/api/v1

# CORS Configuration (comma-separated)
# Добавьте сюда домен фронтенда на Render, например:
# CORS_ORIGINS=https://your-frontend.onrender.com,http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# External APIs
ANILIST_API_URL=https://graphql.anilist.co
ANILIST_TIMEOUT=10
EXTERNAL_API_TIMEOUT=15

# Database (for future use)
# DB_URL=postgresql://user:password@localhost/vilibrity
# DB_ECHO=False

# Redis (for future caching)
# REDIS_URL=redis://localhost:6379/0

# JWT (for future authentication)
# SECRET_KEY=your-secret-key-here
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
# LOG_LEVEL=INFO
